{
  "name": "poupe-money-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "husky install",
    "clean": "rm -rf build",
    "build": "yarn clean && yarn nexus:reflect && tsc",
    "dev": "ts-node-dev -r dotenv/config -r tsconfig-paths/register --no-notify --respawn --transpile-only src/index.ts",
    "start": "node build/src/index.js",
    "watch": "tsc -w",
    "nexus:reflect": "NEXUS_SHOULD_EXIT_AFTER_REFLECTION=true ts-node --transpile-only src/graphql/index.ts",
    "lint": "eslint --ext .ts src",
    "lint:fix": "yarn lint --fix",
    "test": "NODE_ENV=test jest --runInBand"
  },
  "_moduleAliases": {
    "@modules": "build/src/modules",
    "@core": "build/src/core",
    "@graphql": "build/src/graphql"
  },
  "dependencies": {
    "altair-fastify-plugin": "^4.0.11",
    "bcryptjs": "^2.4.3",
    "fastify": "^3.20.2",
    "fastify-plugin": "^3.0.0",
    "graphql": "^15.5.2",
    "graphql-scalars": "^1.10.1",
    "jsonwebtoken": "^8.5.1",
    "mercurius": "^8.1.3",
    "module-alias": "^2.2.2",
    "nexus": "^1.1.0",
    "pg": "^8.7.1",
    "typeorm": "^0.2.37"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.7.10",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-prettier-config": "^1.0.1",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.2",
    "typescript-transform-paths": "^3.3.1"
  }
}
